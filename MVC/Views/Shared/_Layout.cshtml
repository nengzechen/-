<script type="text/javascript">
    // 页面加载函数，进行页面保护
    $(function () {
        var name = sessionStorage.getItem('name');
        if (name == null) {
            window.location = ("/Home/登录");
        } else {
            name = name;
            document.getElementById('name').innerHTML = name;

        }
    });
    $("#首页1").bind("click", function () {
        alert("成功");
    });
    function hha() {
        $('#tt').tabs('add', {
            title: 'New Tab',
            content: 'Tab Body',
        });
    }
    function openTab(text, url, iconCls) {
        if ($("#tabs").tabs("exists", text)) {
            $("#tabs").tabs("select", text);
        } else {
            var content = "<iframe frameborder=none scrolling='no'style='width:100%;height:100%' src='/Home/" + url + "'></iframe>";
            $("#tabs").tabs("add", {
                title: text,
                iconCls: iconCls,
                closable: true,
                content: content
            });
        }
    }
</script>
